Package: read.gt3x
Type: Package
Title: Parse 'ActiGraph' 'GT3X'/'GT3X+' 'Accelerometer' Data
Version: 1.1.1
Authors@R: 
    c(person(given = "Tuomo",
             family = "Nieminen",
             role = c("aut", "cre"),
             email = "tuomo.a.nieminen@gmail.com"),
      person(given = "John",
             family = "Muschelli",
